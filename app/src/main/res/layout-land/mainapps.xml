<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="-400dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginLeft="160dp"
            android:verticalScrollbarPosition="left"
            android:visibility="visible">

                <ImageView
                    android:id="@+id/imageSopIga"
                    android:layout_width="111dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageNasiUduk"
                    app:layout_constraintEnd_toStartOf="@+id/buttonMinEsTeh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/sop_iga" />

                <Button
                    android:id="@+id/buttonMinSopIga"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-70dp"
                    android:text="-"
                    app:layout_constraintEnd_toEndOf="@+id/buttonAddNasiUduk"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageSopIga" />

                <Button
                    android:id="@+id/buttonAddSopIga"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="-48dp"
                    android:text="+"
                    app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinSop"
                    app:layout_constraintEnd_toEndOf="@+id/buttonMinSop"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textSopIga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="-80dp"
                    android:text="Sop Iga"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@+id/sopIgaValue"
                    app:layout_constraintStart_toStartOf="@+id/imageSopIga" />

                <TextView
                    android:id="@+id/sopIgaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="265dp"
                    android:layout_marginTop="70dp"
                    android:text="0"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/imageSopIga"
                    app:layout_constraintTop_toTopOf="@+id/imageSopIga" />

                <ImageView
                    android:id="@+id/imageNasiUduk"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageMieGoreng"
                    app:layout_constraintEnd_toEndOf="@+id/textNasiUduk"
                    app:layout_constraintStart_toEndOf="@+id/textNasiUduk"
                    app:layout_constraintTop_toTopOf="parent"
